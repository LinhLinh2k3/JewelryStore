                        @*<button type="button" class="slick-prev slick-arrow" style=""><i class="pe-7s-angle-left"></i></button>*@
                        @foreach (var item in Model.totalproductList)
                        {
                            <!-- product item start -->
                            <div class="product-item">
                                <figure class="product-thumb">
                                    <a href="@Url.RouteUrl("product-detail", new { link = item.prodLink })">
                                        <img class="pri-img" src="@item.prodRevImg" alt="@item.prodName">
                                        <img class="sec-img" src="@item.prodImg1" alt="@item.prodName">
                                    </a>
                                    @if (Session["id"] != null)
                                    {
                                        <div class="cart-hover">
                                            <button class="btn btn-cart">add to cart</button>
                                        </div>
                                    }
                                </figure>
                                <div class="product-caption text-center">
                                    <div class="product-identity">
                                        <p class="manufacturer-name"><a href="@Url.RouteUrl("category-detail", new { link = item.categories.catLink })">@item.categories.catName</a></p>
                                    </div>
                                    <h6 class="product-name">
                                        <a href="@Url.RouteUrl("product-detail", new { link = item.prodLink })">@item.prodName</a>
                                    </h6>
                                    <div class="price-box">
                                        <span class="price-regular">$@item.prodPrice.ToString("N0")</span>
                                    </div>
                                </div>
                            </div>
                            <!-- product item end -->
                        }
                        @*<button type="button" class="slick-next slick-arrow" style=""><i class="pe-7s-angle-right"></i></button>*@
