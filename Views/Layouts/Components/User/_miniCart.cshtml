@model WebApplication.Models.megalist
<!-- offcanvas mini cart start -->
<div class="offcanvas-minicart-wrapper">
    <div class="minicart-inner">
        <div class="offcanvas-overlay"></div>
        <div class="minicart-inner-content">
            <div class="minicart-close">
                <i class="pe-7s-close"></i>
            </div>
            <div class="minicart-content-box">
                <div class="minicart-item-wrapper">
                    @if (Model.cart != null)
                    {
                        foreach (var item in Model.cart.items)
                        {
                            <ul>
                                <li class="minicart-item">
                                    <div class="minicart-thumb">
                                        <a href="@Url.RouteUrl("product-detail", new { link = item.products.prodLink })">
                                            <img src="@item.products.prodRevImg" alt="product">
                                        </a>
                                    </div>
                                    <div class="minicart-content">
                                        <h3 class="product-name">
                                            <a href="@Url.RouteUrl("product-detail", new { link = item.products.prodLink })">@item.products.prodName</a>
                                        </h3>
                                        <p>
                                            <span class="cart-quantity">1 <strong>&times;</strong></span>
                                            <span class="cart-price">$@item.products.prodPrice</span>
                                        </p>
                                    </div>
                                    <button class="minicart-remove"><i class="pe-7s-close"></i></button>
                                </li>

                            </ul>
                        }
                    }
                    else
                    {
                        <p>Don''t have any product</p>
                    }
                </div>

                <div class="minicart-pricing-box">
                    @if (Model.cart != null)
                    {
                        <ul>
                            <li class="total">
                                <span>total</span>
                                <span><strong>$370.00</strong></span>
                            </li>
                        </ul>
                    }
                </div>

                <div class="minicart-button">
                    <a href="/cart"><i class="fa fa-shopping-cart"></i> View Cart</a>
                    @*<a href="cart.html"><i class="fa fa-share"></i> Checkout</a>*@
                </div>
            </div>
        </div>
    </div>
</div>
<!-- offcanvas mini cart end -->